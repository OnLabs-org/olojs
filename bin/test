#!/usr/bin/env bash

case "$1" in

    "expression")
        mocha test/expression.js
        ;;
        
    "document")
        mocha test/document.js
        ;;

    "fs-store")
        mocha test/fs-loader.js
        mocha test/fs-store.js
        ;;
            
    "http-store")
        mocha test/http-loader.js
        mocha test/http-store.js
        ;;

    "environment")
        mocha test/environment.js
        ;;

    "http-server")
        mocha test/http-server.js
        ;;

    "olojs")
        mocha test/index.js
        ;;

    "all")
        npm test -- expression
        read -n1 -r -p "Press any key to continue..." key
        
        npm test -- document
        read -n1 -r -p "Press any key to continue..." key
        
        npm test -- fs-store
        read -n1 -r -p "Press any key to continue..." key
        
        npm test -- http-store
        read -n1 -r -p "Press any key to continue..." key
        
        npm test -- environment
        read -n1 -r -p "Press any key to continue..." key

        npm test -- http-server
        read -n1 -r -p "Press any key to continue..." key

        npm test -- olojs
        ;;

    *)
        echo "Syntax:"
        echo "> npm test -- expression"
        echo "> npm test -- document"
        echo "> npm test -- fs-store"
        echo "> npm test -- http-store"
        echo "> npm test -- environment"
        echo "> npm test -- http-server"
        echo "> npm test -- olojs"
        echo "> npm test -- all"
        echo ""
        ;;

esac
