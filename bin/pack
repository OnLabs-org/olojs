#!/usr/bin/env bash

if [$1 == ""]
then
    npm --no-git-tag-version version patch 
else
    npm --no-git-tag-version version $1
fi


echo
echo ---------------------------------------------------
echo    Generating documentation ...
echo ---------------------------------------------------
npm run docgen


echo
echo ---------------------------------------------------
echo    Committing changes ...
echo ---------------------------------------------------
git add --all 
git commit -a -m "packed"


echo
echo ---------------------------------------------------
echo    Done!
echo ---------------------------------------------------
